<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" android:padding="10dp">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#DC143C" />
            <stroke
                android:width="1dp"
                android:color="#FF00FF" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#DC143C"
                android:endColor="#FF00FF"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF00FF" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>