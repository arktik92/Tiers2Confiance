<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".MatchCibles.MatchCiblesFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#E1DCDC"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_loc"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Code postal"
                android:textColor="#000000"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/pt_code_postal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Saisir le code postal"
                android:inputType="number"
                android:textColor="#0B0A0A"
                android:textColorHint="#9F9F9F"
                android:textSize="14sp"
                android:typeface="normal"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_age_min"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" Age min : "
                android:textColor="#090909"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_min"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="18"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sb_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_age_max"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" Age max : "
                android:textColor="#090909"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_max"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="18"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sb_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/btn_radio_genre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Femme" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Homme" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Non genrÃ©" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_search_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Chercher" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_cibles"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>